<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="640.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.customersControllers.NewCustomerController">
      <GridPane prefHeight="480.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
          <columnConstraints>
              <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          </columnConstraints>
          <rowConstraints>
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="BOTTOM" vgrow="SOMETIMES" />
          </rowConstraints>
          <children>

              <Label text="Имя и фамилия покупателя:" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
                  <font>
                      <Font name="Serif Regular" size="14.0" />
                  </font>
              </Label>
              <TextField fx:id="nameField" prefHeight="26.0" prefWidth="411.0" GridPane.halignment="CENTER" GridPane.rowIndex="4">
                  <font>
                      <Font name="Serif Regular" size="14.0" />
                  </font>
         </TextField>

              <Label fx:id="wrongData" alignment="CENTER" contentDisplay="CENTER" text="Неверно введены имя и фамилия" textFill="RED" visible="false" GridPane.halignment="CENTER" GridPane.rowIndex="5">
                  <font>
                      <Font name="Serif Regular" size="14.0" />
                  </font>
              </Label>

              <Button mnemonicParsing="false" onAction="#continuee" text="Продолжить" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="TOP">
                  <font>
                      <Font name="Serif Regular" size="14.0" />
                  </font>
              </Button>
              <Button mnemonicParsing="false" onAction="#toPreviousMenu" text="Назад" GridPane.halignment="RIGHT" GridPane.rowIndex="8">
                  <font>
                      <Font name="Serif Regular" size="14.0" />
                  </font>
                  <GridPane.margin>
                      <Insets bottom="5.0" right="5.0" />
                  </GridPane.margin>
              </Button>
          </children>
      </GridPane>

</VBox>
