<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="640.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.customersControllers.NewOrderController">
   <StackPane prefHeight="480.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
      <children>
          <GridPane fx:id="customerGridPane" prefHeight="480.0" prefWidth="640.0">
              <columnConstraints>
                  <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="BOTTOM" vgrow="SOMETIMES" />
              </rowConstraints>
              <children>
      
                  <Label text="Имя и фамилия существующего покупателя:" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
                      <font>
                          <Font name="Serif Regular" size="14.0" />
                      </font>
                  </Label>
                  <TextField fx:id="nameField" prefHeight="26.0" prefWidth="411.0" GridPane.halignment="CENTER" GridPane.rowIndex="4">
                      <font>
                          <Font name="Serif Regular" size="14.0" />
                      </font>
                  </TextField>
      
                  <Label fx:id="wrongData1" alignment="CENTER" contentDisplay="CENTER" text="Покупатель не найден" textFill="RED" visible="false" GridPane.halignment="CENTER" GridPane.rowIndex="5">
                      <font>
                          <Font name="Serif Regular" size="14.0" />
                      </font>
                  </Label>
      
                  <Button mnemonicParsing="false" onAction="#continuee1" text="Продолжить" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="TOP">
                      <font>
                          <Font name="Serif Regular" size="14.0" />
                      </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#toPreviousMenu" text="Назад" GridPane.halignment="RIGHT" GridPane.rowIndex="8">
                      <font>
                          <Font name="Serif Regular" size="14.0" />
                      </font>
                      <GridPane.margin>
                          <Insets bottom="5.0" right="5.0" />
                      </GridPane.margin>
                  </Button>
              </children>
          </GridPane>
          <GridPane fx:id="productGridPane" disable="true" visible="false">
              <columnConstraints>
                  <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="BOTTOM" vgrow="SOMETIMES" />
              </rowConstraints>
              <children>

                  <Label text="Название товара:" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                      <font>
                          <Font name="Serif Regular" size="14.0" />
                      </font>
                  </Label>

                  <TextField fx:id="titleField" prefHeight="26.0" prefWidth="411.0" GridPane.halignment="CENTER" GridPane.rowIndex="2">
                      <font>
                          <Font name="Serif Regular" size="14.0" />
                      </font>
                  </TextField>

                  <Label text="Количество:" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
                      <font>
                          <Font name="Serif Regular" size="14.0" />
                      </font>
                  </Label>
                  <TextField fx:id="amountField" prefHeight="26.0" prefWidth="411.0" GridPane.halignment="CENTER" GridPane.rowIndex="4">
                      <font>
                          <Font name="Serif Regular" size="14.0" />
                      </font></TextField>

                  <Label fx:id="wrongData2" alignment="CENTER" contentDisplay="CENTER" text="Неверно введено название и/или количество " textFill="RED" visible="false" GridPane.halignment="CENTER" GridPane.rowIndex="5">
                      <font>
                          <Font name="Serif Regular" size="14.0" />
                      </font>
                  </Label>

                  <Button mnemonicParsing="false" onAction="#continuee2" text="Продолжить" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="TOP">
                      <font>
                          <Font name="Serif Regular" size="14.0" />
                      </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#toPreviousMenu" text="Назад" GridPane.halignment="RIGHT" GridPane.rowIndex="8">
                      <font>
                          <Font name="Serif Regular" size="14.0" />
                      </font>
                      <GridPane.margin>
                          <Insets bottom="5.0" right="5.0" />
                      </GridPane.margin>
                  </Button>
              </children>
          </GridPane>
      </children></StackPane>

</VBox>
