<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="480.0" prefWidth="640.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.LoginMenuController">

    <Label text="Имя пользователя:">
        <font>
            <Font name="Serif Regular" size="14.0" />
        </font>
    </Label>

    <TextField fx:id="userNameField" prefHeight="26.0" prefWidth="411.0">
        <font>
            <Font name="Serif Regular" size="14.0" />
        </font>
    </TextField>

    <Label text="Пароль:">
        <font>
            <Font name="Serif Regular" size="14.0" />
        </font>
    </Label>

    <PasswordField fx:id="passwordField" prefHeight="26.0" prefWidth="411.0">
      <font>
         <Font name="Serif Regular" size="14.0" />
      </font></PasswordField>

    <Label fx:id="wrongData" alignment="CENTER" contentDisplay="CENTER" text="Неверно введено имя пользователя и/или пароль" textFill="RED" visible="false">
        <font>
            <Font name="Serif Regular" size="14.0" />
        </font>
    </Label>

    <Button mnemonicParsing="false" onAction="#login" text="Войти">
        <font>
            <Font name="Serif Regular" size="14.0" />
        </font>
    </Button>

</VBox>
